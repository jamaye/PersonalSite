@page "/Feedback"
@model PersonalSite.Pages.Feedback.AddModel
@{
	ViewData["Title"] = "Send me Feedback";
	var message = ViewData["Message"]?.ToString();
}
<script>


</script>

<h2>Feedback Section</h2>
<form method="post">
	@if(!string.IsNullOrWhiteSpace(message))
	{
		<div class="alert @Model.alertType " role="alert">
			@message
		</div>
	}
	<div class="mb-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="NewFeedback.Name" />
		<span class="text-danger" asp-validation-for="NewFeedback.Name"> </span>
	</div>
	<div class="mb-3">
		<label class="form-label">Email</label>
		<input type="email" class="form-control" asp-for="NewFeedback.Email" />
		<span class="text-danger" asp-validation-for="NewFeedback.Email"> </span>
	</div>

	<div class="mb-3">
		<label class="form-label">Comments:</label><br>
		<textarea asp-for="NewFeedback.Body"></textarea>
		<p value=NewFeedback.Name></p>
	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>

</form>
